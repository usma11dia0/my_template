    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: サンプル",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["sample","sample2"],
            "env": {
                "ENV_FIRST": "ENV1",
                "ENV_LAST": "ENV2"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: empowerme",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["empowerme"],
            "env": {
                "ENV": "local",
                "SAMPLE": "sample"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}

// | 定義                  | 意味　　　　 |
// | --------------------- | ---------- |
// | ${cwd}             　 | VSCodeの起動時のタスクランナーの現在の作業ディレクトリ |
// | ${file}               | 現在開いているファイル |
// | ${execPath}           | VSCode自体のパス|